{
  "productName": "live-comment",
  "electronVersion": "12.0.5",
  "files": [
    "package.json",
    "dist/js/**/*.js"
  ],
  "extraFiles": [
    { "from": "../screen/build/", "to": "./resources/screen/" },
    "resources/**",
    "dist/js/preload/*.js"
  ],
  "win": {
    "target": [{
      "target": "nsis",
      "arch": ["x64"]
    }]
  },
  "mac": {
    "target": [{
      "target": "dmg",
      "arch": ["x64"]
    }]
  },
  "linux": {
    "executableName": "live-comment",
    "target": [{
      "target": "deb",
      "arch": ["x64"]
    }]
  }
}
