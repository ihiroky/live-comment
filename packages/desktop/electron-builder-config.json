{
  "productName": "live-comment",
  "appId": "ml.live-comment.desktop",
  "electronVersion": "12.0.5",
  "files": [
    "package.json",
    "dist/js/**/*.js"
  ],
  "extraFiles": [
    "resources/**",
    "dist/js/preload/*.js"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "draft"
  },
  "win": {
    "target": [{
      "target": "nsis",
      "arch": ["x64"]
    }],
    "publish": ["github"]
  },
  "mac": {
    "target": [{
      "target": "dmg",
      "arch": ["x64"]
    }],
    "publish": ["github"]
  },
  "linux": {
    "executableName": "live-comment",
    "target": [{
      "target": "deb",
      "arch": ["x64"]
    }],
    "publish": ["github"]
  }
}
