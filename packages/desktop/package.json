{
  "name": "live-comment-desktop",
  "version": "0.1.0",
  "description": "live-comment desktop",
  "main": "dist/js/index.js",
  "homepage": "https://github.com/ihiroky/live-comment",
  "repository": "https://github.com/ihiroky/live-comment/desktop",
  "author": "Hiroki Itoh <ihiroky@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "node -e \"require('fs').rmdirSync('dist', {recursive: true})\"",
    "start": "tsc -b && electron . --enable-logging",
    "build": "tsc -b && electron-builder -c electron-builder-config.json --dir",
    "build:full": "yarn --cwd ../screen build && yarn build",
    "packages": "tsc -b && electron-builder -c electron-builder-config.json -wml",
    "package:linux": "tsc -b && electron-builder -c electron-builder-config.json -l",
    "package:win": "tsc -b && electron-builder -c electron-builder-config.json -w",
    "package:mac": "tsc -b && electron-builder -c electron-builder-config.json -m"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "asar": "^3.0.3",
    "electron": "9.4.0",
    "electron-builder": "^22.7.0",
    "typescript": "^3.9.6"
  }
}
